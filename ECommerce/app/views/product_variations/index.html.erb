<p id="notice"><%= notice %></p>

<h1>Product Variations</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Variation</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_variations.each do |product_variation| %>
      <tr>
        <td><%= product_variation.product %></td>
        <td><%= product_variation.variation %></td>
        <td><%= product_variation.stock %></td>
        <td><%= link_to 'Show', product_variation %></td>
        <td><%= link_to 'Edit', edit_product_variation_path(product_variation) %></td>
        <td><%= link_to 'Destroy', product_variation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


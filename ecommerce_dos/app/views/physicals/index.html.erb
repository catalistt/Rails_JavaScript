<p id="notice"><%= notice %></p>

<h1>Physicals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Stock</th>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @physicals.each do |physical| %>
      <tr>
        <td><%= physical.name %></td>
        <td><%= physical.stock %></td>
        <td><%= image_tag physical.images.last.variant(resize: "50x50").processed %></td>
        <td><%= link_to 'Show', physical %></td>
        <td><%= link_to 'Edit', edit_physical_path(physical) %></td>
        <td><%= link_to 'Destroy', physical, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Physical', new_physical_path %>

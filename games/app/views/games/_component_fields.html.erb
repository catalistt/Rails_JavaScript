<div class="nested-fields">
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder:'Nombre' %>
  </div>

  <div class="form-group">
    <%= f.number_field :quantity, class: "form-control", placeholder: 'Cantidad' %>
  </div>

  <div class="form-group">
    <div class="custom-file">
      <%= f.file_field :image, class: "custom-file-input" %>
      <%= f.label 'Escoge una imagen', class: "custom-file-label" %>
    </div>
  </div>


  <%= link_to_remove_association "Eliminar", f %>
</div>
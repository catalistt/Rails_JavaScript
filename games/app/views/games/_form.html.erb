<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, class: "form-control", placeholder: "Nombre" %>
  </div>

  <div class="form-group">
    <%= form.text_area :description, class: "form-control", placeholder: "Descripción" %>
  </div>

  <div class="form-group">
    <%= form.text_field :max_players, class: "form-control", placeholder: "Máx. jugadores" %>
  </div>

  <div class="form-group">
    <%= form.text_field :min_players, class: "form-control", placeholder: "Min. jugadores" %>
  </div>

  <div class="form-group">
    <div class="custom-file">
      <%= form.file_field :avatar, class: "custom-file-input" %>
      <%= form.label 'Escoge una portada', class: "custom-file-label" %>
    </div>
  </div>

  <h3>Reglas</h3>
  <div class="field" id="rules">
    <%= form.fields_for :rules do |rule_form| %>
      <%= render 'rule_fields', f: rule_form %>
    <% end %>
    <div class="links">
      <%= link_to_add_association raw('<span><i class="fa fa-plus"> Regla</i></span>'), form, :rules, class: "btn btn-success" %>
    </div>
  </div>
  <br>

	<h3>Componentes</h3>
  <div class="field" id="components">
    <%= form.fields_for :components do |component_form| %>
      <%= render 'component_fields', f: component_form %>
    <% end %>
    <div class="links">
      <%= link_to_add_association raw('<span><i class="fa fa-plus"> Componente</i></span>'), form, :components, class: "btn btn-success" %>
    </div>
  </div>
  <br>

  <div class="actions">
    <%= form.submit 'Guardar', class: "btn btn-primary", class: "btn btn-success" %>
  </div>
  <br>
<% end %>

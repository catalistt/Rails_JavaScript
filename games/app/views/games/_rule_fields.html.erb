<div class="nested-fields">
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Nombre" %>
  </div>
<br>
  <div class="form-group">
    <div class="custom-file">
      <%= f.file_field :document, class: "custom-file-input" %>
      <%= f.label 'Escoge un documento', class: "custom-file-label" %>
    </div>
  </div>

  <%= link_to_remove_association "Eliminar", f %>
</div>
<li class="media">
    <%= document.name %>
    <div class="media-body">
      <h5 class="mt-0 mb-1"><%= document.name %></h5>
    </div>
    <%= link_to raw('<i class="fa fa-edit"></i>'), edit_game_path(document), class: "btn btn-info ml-2" %>
    <%= link_to raw('<i class="fa fa-download"></i>'), rails_blob_path(document.document, disposition: 'attachment'), class: "btn btn-warning" %>
  </li>